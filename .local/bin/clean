#!/bin/bash

sudo /usr/bin/apt-get update -y
sudo /usr/bin/apt-get upgrade -y
sudo /usr/bin/apt-get full-upgrade -y
sudo /usr/bin/apt-get dist-upgrade -y
sudo /usr/bin/apt-get clean -y
sudo /usr/bin/apt-get autoclean -y
sudo /usr/bin/apt-get autoremove -y
pip cache purge
sudo rm -rf /tmp/*
sudo rm -rf ~/.cache/thumbnails/*
sudo journalctl --vacuum-time=1d
